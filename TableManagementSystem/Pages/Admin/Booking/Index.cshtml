@page
@model TableManagementSystem.Pages.Admin.Booking.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Booking Table</h1>

<p>
    <a  asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].Meals)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].Table)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].Flower)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].TablePositions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].SpecialNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bookingTable[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.bookingTable) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Meals.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Table.TableName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Flower.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TablePositions.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
