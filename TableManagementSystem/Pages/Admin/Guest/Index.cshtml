@page
@model TableManagementSystem.Pages.Admin.Guest.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Guest</h1>

<p>
    <a class="btn-primary set-button" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.guest[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guest[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guest[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.guest[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.guest) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a class="btn-success set-button" asp-page="./Edit" asp-route-id="@item.GuestId">Edit</a> |
                <a class="btn-primary set-button" asp-page="./Details" asp-route-id="@item.GuestId">Details</a> |
                <a class="btn-danger set-button" asp-page="./Delete" asp-route-id="@item.GuestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
