@page
@model TableManagementSystem.Pages.Admin.Meal.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Meal</h1>

<p>
    <a class="btn-primary set-button" asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.meal[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.meal) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn-success set-button" asp-page="./Edit" asp-route-id="@item.MealId">Edit</a> |
                <a class="btn-primary set-button" asp-page="./Details" asp-route-id="@item.MealId">Details</a> |
                <a class="btn-danger set-button" asp-page="./Delete" asp-route-id="@item.MealId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
